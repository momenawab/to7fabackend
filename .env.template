# üîê TO7FA Backend Environment Configuration
# Copy this file to .env and update the values

# ===============================
# DATABASE CONFIGURATION
# ===============================
DB_NAME=to7fa_db
DB_USER=django_user
DB_PASSWORD=your_strong_password_here
DB_HOST=localhost
DB_PORT=3306

# ===============================
# SECURITY SETTINGS
# ===============================
# Generate a new secret key: https://djecrety.ir/
SECRET_KEY=your-new-secret-key-here-make-it-very-long-and-random

# Production: False, Development: True
DEBUG=False

# Add your domain and IP addresses (comma-separated)
ALLOWED_HOSTS=your-domain.com,your-server-ip,localhost,127.0.0.1

# ===============================
# CORS SETTINGS
# ===============================
# URLs that can access your API (Flutter app domains)
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://your-frontend-domain.com

# ===============================
# EMAIL CONFIGURATION (Optional)
# ===============================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# ===============================
# FILE UPLOAD SETTINGS
# ===============================
# Maximum file size for uploads (in bytes)
MAX_UPLOAD_SIZE=10485760  # 10MB

# Media files URL prefix
MEDIA_URL=/media/

# ===============================
# ADMIN PANEL SETTINGS
# ===============================
# Admin panel URL prefix (change for security)
ADMIN_URL_PREFIX=dashboard

# ===============================
# API SETTINGS
# ===============================
# API rate limiting
API_THROTTLE_RATE_ANON=100/hour
API_THROTTLE_RATE_USER=1000/hour

# ===============================
# LOGGING SETTINGS
# ===============================
LOG_LEVEL=INFO
LOG_FILE_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=3

# ===============================
# REDIS SETTINGS (Optional - for caching)
# ===============================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# ===============================
# PRODUCTION SETTINGS
# ===============================
# Use secure cookies in production
SECURE_COOKIES=True

# Force HTTPS redirects
SECURE_SSL_REDIRECT=True

# Security headers
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True

# ===============================
# CONTACT SYSTEM SETTINGS
# ===============================
# WhatsApp number for contact links (with country code)
WHATSAPP_NUMBER=+201234567890

# Default contact response timeout (hours)
CONTACT_RESPONSE_TIMEOUT=24

# ===============================
# BACKUP SETTINGS
# ===============================
# Database backup settings
DB_BACKUP_ENABLED=True
DB_BACKUP_RETENTION_DAYS=30